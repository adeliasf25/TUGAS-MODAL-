<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MPSActivity"
    android:background="@drawable/mapssbg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/view360"
        app:layout_constraintBottom_toTopOf="@+id/cardmps"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardmps"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textmps1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desa Petingsari"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/textmps2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desa Petingsari"
                app:layout_constraintTop_toBottomOf="@+id/textmps1"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/textmps3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desa Petingsari"
                app:layout_constraintTop_toBottomOf="@+id/textmps2"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
            android:id="@+id/textmps4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desa Petingsari"
            app:layout_constraintTop_toBottomOf="@+id/textmps3"
            app:layout_constraintStart_toStartOf="parent"/>
            <TextView
            android:id="@+id/textmps5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desa Petingsari"
            app:layout_constraintTop_toBottomOf="@+id/textmps2"
            app:layout_constraintStart_toStartOf="parent"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/rute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/simpan"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <Button
                        android:id="@+id/simpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <Button
                        android:id="@+id/bagikan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/simpan"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>